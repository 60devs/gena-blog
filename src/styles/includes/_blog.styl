.vclPost
  margin-top: 1em
  margin-bottom: 2em

.vclPostMeta
  margin-bottom: 1.3em
  line-height: 2

.vclPostHeader .vclTokenContainer .vclToken
  margin-right: 0.5em

.vclPostContent
  line-height: 2

.vclContentArea .vclText
  line-height: 2

.vclPostContent img
  border: rgba(0, 0, 0, 0.4) 1px solid
  border-bottom: rgba(0, 0, 0, 0.3) 3px solid
  border-right: rgba(0, 0, 0, 0.3) 3px solid
  border-radius: 5px
  margin: 1em auto;
  width: 90%;
  display: block

.vclPostContent img
  cursor: zoom-in;